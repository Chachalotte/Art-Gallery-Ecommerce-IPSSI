{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - Valider ma commande{% endblock %}

{% block content %}

    <h1>Valider ma commande</h1>
    <p>Choisissez vos préférences avant de passer votre commande.</p>
    <hr/>
    <div>        
        <div>
            {% set formHtml %}
                {{form_start(form, {action:path('order_recap')} ) }}
                    <a href="{{ path('new_address')}}">Ajouter une nouvelle adresse</a>
                {{form_end(form)}}
            {% endset %}    
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
        <div>
            {% for product in cart %}
                <img src="{{ asset('img/product/' ~ product.product.img) }}"/>
                {{product.product.name}}                
            {% endfor %}
        </div>
    </div>
{% endblock %}