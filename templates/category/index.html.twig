{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - Catégories{% endblock %}

{% block content %}
<link href="{{ asset('styles/users.css') }}" type="text/css" rel="stylesheet" />
    <h2 class="rubriqueTitle">Catégories</h2>
    <section class="showCategories mainBody">
        {% for category in categories %}
        <div class="category">
            <a href="{{path('category', {'id': category.id})}}">
                <h2>{{category.name | capitalize}}</h2>
                <img src="{{category.img}}"/>
            </a>
            <p>{{category.description | capitalize}}</p>
        </div>
        <hr/>
        {% else %}
        <p>Il n'y a pas encore de Catégories</p>
        {% endfor %}
    </section>
    
{% endblock %}
