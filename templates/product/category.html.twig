{% extends 'layout.html.twig' %}

{% block title %}{{parent()}} - {{category.name | capitalize}}{% endblock %}

{% block content %}

    <h1 style="background-image:{{category.img}}">{{category.name | capitalize}}</h1>
    <section class="productsList">
    {% for product in category.products %}
        <div>
        {% if product.artist %}
            <a href="{{path('artist', {'id': product.artist.id} ) }}">{{ product.artist.firstname }} {{ product.artist.name }}</a>
        {% endif %}
            <div>
                <img src="{{ asset('img/product/' ~ product.img) }}"/>  
                <div>
                    <h2><a href="{{path('product', {'id': product.id} )}}">{{ product.name | capitalize }}</a></h2>             
                    <p>{{ product.description | capitalize | slice(0, 50)}}</p>
                </div> 
            </div>     
        </div>
    {% else %}
        <p>Il n'y a pas encore d'oeuvres à présenter.</p>
    {% endfor %}


{% endblock %}